defaults
auth on
tls on
port 587

account personal
host smtp.mail.me.com
eval echo "from $MAIL_PERSONAL_USER"
eval echo "user $MAIL_PERSONAL_USER"
passwordeval echo "$MAIL_PERSONAL_PASS"

account work
host smtp.gmail.com
eval echo "from $MAIL_WORK_USER"
eval echo "user $MAIL_WORK_USER"
auth oauthbearer
passwordeval oauth2l fetch --credentials ~/.oauth/mail.work.json --scope https://mail.google.com/

account default: personal
